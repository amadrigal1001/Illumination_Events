  margin-bottom: 30px;
  resize:none;
  font-family: Montserrat;
}

input[type="radio"],
input[type="checkbox"] {
  margin: 0 4px 8px 0;
  font-family: Montserrat;
}

select {
  padding: 6px;
  height: 32px;
  border-radius: 2px;
  font-family: Montserrat;
}

button {
  width: 100%;
    height: 50px;
    background: #ff656c;
    box-sizing: border-box;
    border-radius: 5px;
    border: 1px solid #e15960;
    color: #fff;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 14px;
    font-family: Montserrat;
    outline: none;
    cursor: pointer;
}

fieldset {
  margin-bottom: 30px;
  border: none;
  font-family: Montserrat;
}

legend {
  font-size: 1.4em;
  margin-bottom: 10px;
  font-family: Montserrat;
}

label {
  display: block;
  margin-bottom: 8px;
  font-family: Montserrat;
}

label.light {
  font-weight: 300;
  display: inline;
  font-family: Montserrat;
}

.number {
  background-color: #ff656c;;
  color: #fff;
  height: 30px;
  width: 30px;
  display: inline-block;
  font-size: 0.8em;
  margin-right: 4px;
  line-height: 30px;
  text-align: center;
  text-shadow: 0 1px 0 rgba(255,255,255,0.2);
  border-radius: 100%;
  font-family: Montserrat;
}

@media screen and (min-width: 480px) {

  form {
    max-width: 480px;
    font-family: Montserrat;
  }

}
